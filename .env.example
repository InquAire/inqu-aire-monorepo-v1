# InquAire Environment Variables
# Copy this file to .env and fill in the values

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Primary database (read/write)
DATABASE_URL="postgresql://inquaire:inquaire@localhost:5432/inquaire_dev"

# Read replica database (optional, for read-only queries)
# If not set, will use DATABASE_URL for all queries
DATABASE_READ_URL="postgresql://inquaire:inquaire@localhost:5432/inquaire_dev"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key for JWT token signing (min 32 characters recommended)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"

# JWT access token expiration (e.g., 15m, 1h, 7d)
JWT_EXPIRATION="7d"

# Refresh token expiration (e.g., 7d, 30d, 90d)
REFRESH_TOKEN_EXPIRATION="30d"

# ==============================================
# OPENAI CONFIGURATION
# ==============================================
# OpenAI API key for AI-powered inquiry analysis
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"

# OpenAI model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL="gpt-4"

# Maximum tokens for OpenAI responses
OPENAI_MAX_TOKENS=1000

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Allowed origins for CORS (comma-separated for multiple origins)
# Development: http://localhost:5173
# Production: https://admin.inquaire.com
CORS_ORIGIN="http://localhost:5173"

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
# Redis host for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# ==============================================
# AWS CONFIGURATION (Optional)
# ==============================================
# AWS region
AWS_REGION=ap-northeast-2

# AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 bucket for file uploads
AWS_S3_BUCKET=inquaire-files

# SES configuration for email sending
AWS_SES_REGION=ap-northeast-2
AWS_SES_FROM_EMAIL=noreply@inquaire.com

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=json

# ==============================================
# RATE LIMITING
# ==============================================
# Rate limit time window in seconds
RATE_LIMIT_TTL=60

# Maximum number of requests per TTL
RATE_LIMIT_MAX=100

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================
# Secret key for webhook verification
WEBHOOK_SECRET="your-webhook-secret-key-change-this-in-production"

# Webhook timeout in milliseconds
WEBHOOK_TIMEOUT=5000

# ==============================================
# MESSAGING PLATFORM CONFIGURATION
# ==============================================
# Kakao Talk Channel credentials
KAKAO_APP_KEY=your-kakao-app-key
KAKAO_APP_SECRET=your-kakao-app-secret

# LINE Messaging API credentials
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token

# ==============================================
# SENTRY CONFIGURATION (Optional)
# ==============================================
# Sentry DSN for error tracking
# Get your DSN from: https://sentry.io/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment name for Sentry
SENTRY_ENVIRONMENT=development

# Sample rate for performance monitoring (0.0 - 1.0)
SENTRY_TRACES_SAMPLE_RATE=1.0

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# SMTP configuration for email sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender name
EMAIL_FROM_NAME="InquAire"
EMAIL_FROM_ADDRESS=noreply@inquaire.com

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size in bytes (e.g., 5MB = 5242880)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ==============================================
# PAGINATION DEFAULTS
# ==============================================
# Default page size for list endpoints
DEFAULT_PAGE_SIZE=20

# Maximum page size
MAX_PAGE_SIZE=100

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================
# Enable/disable specific features
FEATURE_AI_ANALYSIS=true
FEATURE_AUTO_REPLY=true
FEATURE_WEBHOOK_EVENTS=true
FEATURE_EMAIL_NOTIFICATIONS=false

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Enable Swagger API documentation
ENABLE_SWAGGER=true

# Enable debug mode (detailed error messages)
DEBUG_MODE=true

# Bypass authentication (for testing only, NEVER in production)
BYPASS_AUTH=false

# ==============================================
# PRODUCTION ONLY
# ==============================================
# Database connection pool size
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database connection timeout in milliseconds
DB_CONNECTION_TIMEOUT=5000

# Enable database query logging
DB_LOG_QUERIES=false

# Helmet security headers
HELMET_ENABLED=true

# HTTPS redirect
FORCE_HTTPS=true

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================
# Google Analytics tracking ID
GA_TRACKING_ID=UA-XXXXXXXXX-X

# New Relic license key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# DataDog API key
DATADOG_API_KEY=your-datadog-api-key

# ==============================================
# ADMIN CLIENT CONFIGURATION
# ==============================================
# Admin panel base URL
ADMIN_URL=http://localhost:5173

# API base URL for admin client
# This is used in the admin client's .env.local file
# VITE_API_BASE_URL=http://localhost:3000
