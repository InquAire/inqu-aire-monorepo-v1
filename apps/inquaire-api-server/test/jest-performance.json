{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*performance.*\\.spec\\.ts$",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(isomorphic-dompurify|dompurify|jsdom|parse5)/)"
  ],
  "testTimeout": 60000,
  "maxWorkers": 1
}

